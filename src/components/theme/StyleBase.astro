<style is:global>
	:root, [data-theme='light']  {
	    --brand:		#007DA5 ;
  	    --secondary:	#E1251B ;
	    --surface-color:	#e9e9e9 ;       
		--background-color: #f7f7f7;
        --text-color: #454547;
        --link-color: #454964;
        --link-active-color: #292929;
		--pale-color:#b4b4b4;
		

	}
	
	[data-theme='dark'] {
        --background-color: #1a1a1a;
        --text-color: #cac9c9;
        --link-color: #a8acd4;
	    --link-active-color: #b3b2ff;
		--contrast-color:#121416;
		--pale-color:#313233;
		--surface-color:	#272727 ;  

	}

	[data-theme='salmon'] {
        --background-color:  #FCFCF5; 
        --text-color:		 #5a4d45;
        --link-color:		 #6e5241;
	    --link-active-color: #413731;
		--contrast-color:	 #d5bdaf;
		--pale-color:		 #d6ccc2;
		--surface-color:	 #EDEDE9;  

	}
	[data-theme='standout'] {
        --background-color:  #c6eaf7; 
        --text-color:		 #005d7c;
        --link-color:		 #007DA5;
	    --link-active-color: #007DA5;
		--contrast-color:	 #0192c2;
		--pale-color:		 #56a9c5;
		--surface-color:	 #9ad7eb;  

	}




	body{
		font-family: sans-serif;
		font-size: 1em;
		position: relative;
		background-color: var(--background-color);
		color: var(--text-color);
	

	}
	a {color:var(--link-color) ;}
	a.active{ color: var(--link-active-color);}
	/* COLOR DE CONTRASTE */
	.contrast, .sticky {
		color: var(--background-color) !important ;
		background-color:var(--text-color) !important  ;

	}
	.contrast a { color:var(--background-color) ;}
	.contrast a:hover, .contrast a.active{ color:var(--background-color);} 
	
	/* COLOR DONDE ALTERNATIVO */

	.surface, .sticky {
		color: var(--text-color) !important ;
		background-color:var(--surface-color) !important  ;

	}
	.surface a { color:var(--background-color) ;}
	.surface a:hover, .surface a.active{ color:var(--background-color);} 
	

	.pale{
		background-color:var(--pale-color) !important  ;
		
	}
	

	h1, h2, h3, h4, h5, h6{ @apply leading-1.2em;}
	  
	h1{@apply text-2.2em lg:text-2.8vw ;  } 
	h2{@apply text-1.8em lg:text-2.2vw ;}
	h3{@apply text-1.6em lg:text-1.8vw;}
	h4{@apply text-1.4em lg:text-1.6vw ;}
	h5{@apply text-1.2em lg:text-1.4em  ;}
	h6{@apply text-1em lg:text-1.2em;}




	
</style>




