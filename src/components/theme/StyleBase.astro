<style is:global>
	:root, [data-theme='light']  {
	    --brand:		#007DA5 ;
  	    --secondary:	#E1251B ;
	    --surface-color:	#e9e9e9 ;       
		--background-color: #f7f7f7;
        --text-color: #454547;
        --link-color: #454964;
        --link-active-color: #292929;
		--pale-color:#b4b4b4;
		

	}
	
	[data-theme='dark'] {
        --background-color: #212a2e;
        --text-color: #dbdbdb;
        --link-color: #828fff;
	    --link-active-color: #95ffb5;
		--contrast-color:#121416;
		--pale-color:#2a3236;

	}

	[data-theme='salmon'] {
        --background-color: #b6695b;
        --text-color: #fffae5;
        --link-color: #7e99f1;
	    --link-active-color: #efffae;
		--contrast-color:#121416;
		--pale-color:#28789b;

	}

	body{
		font-family: sans-serif;
		font-size: 1em;
		position: relative;
		background-color: var(--background-color);
		color: var(--text-color);
	}
	a {color:var(--link-color) ;}
	a.active{ color: var(--link-active-color);}
	/* COLOR DE CONTRASTE */
	.contrast, .sticky {
		color: var(--background-color) !important ;
		background-color:var(--text-color) !important  ;

	}
	.contrast a { color:var(--background-color) ;}
	.contrast a:hover, .contrast a.active{ color:var(--background-color);} 
	
	/* COLOR ALTERNATIVO */

	.surface, .sticky {
		color: var(--text-color) !important ;
		background-color:var(--surface-color) !important  ;

	}
	.surface a { color:var(--background-color) ;}
	.surface a:hover, .surface a.active{ color:var(--background-color);} 
	

	.pale{
		background-color:var(--pale-color) !important  ;
	}
	

	h1, h2, h3, h4, h5, h6{ @apply leading-1.2em;}
	  /* font-size: clamp( var(--minFontSize), var(--scaler), var(--maxFontSize) );  font-size: clamp( 2.4em, 4.2vw, 6.4em ); */
	h1{@apply text-2em lg:text-3em} 
	h2{@apply text-1.8em lg:text-2.4vw ;}
	h3{@apply text-1.6em lg:text-1.8vw;}
	h4{@apply text-1.4em lg:text-1.6vw ;}
	h5{@apply text-1.2em lg:text-1.4em  ;}
	h6{@apply text-1em lg:text-1.2em;}




	


	
</style>
