
<div class="fixed top-14 right-0 z-2">
    <span class="theme-btn bg-white" name-theme="light" ></span>
    <span class="theme-btn bg-black" name-theme="dark" ></span>
    <span class="theme-btn bg-orange" name-theme="salmon" ></span>
</div>
<style>
    .theme-btn{
        @apply block w-2 h-8 cursor-crosshair ;
    }
</style>
<script>
	
   const mainTheme = document.querySelector('[data-theme]') as HTMLBodyElement;
   const themeBtns = document.querySelectorAll('.theme-btn');
   
   // Obtener el tema almacenado en localStorage al cargar la pÃ¡gina
   const storedTheme = localStorage.getItem('selectedTheme');
   if (storedTheme) {
       mainTheme.setAttribute('data-theme', storedTheme);
   }
   
   themeBtns.forEach((themeBtn) => {
       themeBtn.addEventListener('click', () => {
           const nameTheme = themeBtn.getAttribute('name-theme');
           if (nameTheme) {
               // Establecer el tema en el atributo 'data-theme'
               mainTheme.setAttribute('data-theme', nameTheme);
   
               // Almacenar el tema seleccionado en localStorage
               localStorage.setItem('selectedTheme', nameTheme);
           }
       });
   });
    
</script>